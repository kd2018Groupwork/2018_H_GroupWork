<% provide(:title, '聖地登録') %>
<h1>聖地登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@product) do |f| %>
      <table class="table">
        <tr>
          <th>作品名</th>
          <td>
            <%= f.text_field :product_name,
              class: 'form-control auto-complete',
              autocomplete: 'off'
            %>
          </td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= f.collection_select(:genre_id, Genre.all, :id, :genre_name, {prompt: "選択してください"}, class: 'form-control') %></td>
        </tr>
      </table>
      <%= f.submit "この作品で登録する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>