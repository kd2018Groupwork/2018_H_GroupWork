<h2 class="center">聖地検索</h2>

<div class="panel with-nav-tabs panel-search">
  <div class="panel-heading">
    <ul class="nav nav-tabs">
      <li class="active">
        <a href="#product-tab" data-toggle="tab">作品</a>
      </li>
      <li>
        <a href="#pref-tab" data-toggle="tab">地域</a>
      </li>
      <li>
        <a href="#product-and-pref-tab" data-toggle="tab" >作品×地域</a>          
      </li>
    </ul>
  </div>

  <div class="panel-body">
    <div class="tab-content">
      <!-- 作品検索フォーム -->
      <div id="product-tab" class="tab-pane in active">
        <%= form_tag(
              search_result_path,
              method: "get",
              class: "form-horizontal"
            ) do
        %>
          <div class="form-inline center">
            <%= render partial: 'search/product_genre_form' %>
          </div>
          <%= submit_tag "検索", name: nil, class: "btn btn-primary" %>
        <% end %>
      </div>

      <!-- 地域検索フォーム -->
      <div id="pref-tab" class="tab-pane">
        <%= form_tag(
              search_result_path,
              method: "get",
              class: "form-horizontal"
              ) do 
        %>
          <div class="form-inline">
            <%= render partial: 'search/pref_city_form' %>
          </div>
          <%= submit_tag "検索", name: nil, class: "btn btn-primary" %>
        <% end %>
      </div>

      <!--　作品×地域検索フォーム　-->
      <div id="product-and-pref-tab" class="tab-pane">
        <%= form_tag(
              search_result_path,
              method: "get",
              class: "form-horizontal"
              ) do 
        %>
          <div class="form-inline center">
            <%= render partial: 'search/product_genre_form' %>
            <p class="center"><strong>✕</strong></p>
            <%= render partial: 'search/pref_city_form'%>
          </div>
          <%= submit_tag "検索", name: nil, class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
