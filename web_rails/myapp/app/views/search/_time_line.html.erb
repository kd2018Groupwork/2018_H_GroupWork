<% @spot = Spot.where('review_flag = ?',true).order('updated_at DESC') %>
<% @spot.each do |data| %>
  <table class="table">
    <tr>
      <td class="table-img">
        <% if data.images? %>
          <%= image_tag(data.images[0].url, class: "img-thumbnail", size: 100) %>
        <% else %>
          <%= image_tag("icon/NoImage.png", size: 100) %>
        <% end %>
      </td>
      <td class="table-text">
        <%= link_to data.spot_name ,search_detail_path(spot_id: data.id) %><br>
        <%= data.details %><br><br>
        <%= render 'favorite/favorite' , detail: data%>
        <%= render 'rate/rate' , detail: data %>
        <span class="timestamp"> 
          <%= time_ago_in_words(data.updated_at) %>Ââç
        </span>
      </td>
    </tr>
  </table>
<% end %>