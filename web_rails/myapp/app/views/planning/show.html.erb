<% provide(:title, '計画表一覧') %>
  <h1>聖地巡礼スケジュール一覧</h1>
      <div class="table-responsive">
        <% @plan = Plan.where(user_id: session[:user_id]) %>
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th class="col-sm-6">聖地巡礼スケジュール名</th>
              <th class="col-sm-3">作成日</th>
              <th class="col-sm-2">ダウンロード・削除</th>
            </tr>
          </thead>
          <tbody>
          <% @plan.each do |pa| %>
          <tr>
            <td>
              <%= link_to plan_detail_path(plan_id: pa.plan_id) do %>
                <%= pa.plan_name %>
              <% end %>
            </td>
            <td>
              <%= pa.created_at.strftime("%Y年%m月%d日 %H時%M分") %>
            </td>
            <td>
              <%= link_to plan_detail_path(format: :pdf, plan_id: pa.plan_id) , class:"btn btn-link btn-lg" do %>
                <i class="glyphicon glyphicon-save"></i>
              <% end %>
              <%= link_to plan_destroy_path(id: pa.id), method: :delete , class:"btn btn-link btn-lg" do %>
                <i class="glyphicon glyphicon-trash"></i>
              <% end %>
            </td>
          </tr>
          <% end %>
          </tbody>
        </table>
      </div>